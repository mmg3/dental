<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="dentalFaces">
		<jta-data-source>java:/OracleDental</jta-data-source>
		<class>entidades.Ciudad</class>
		<class>entidades.Cliente</class>
		<class>entidades.Consulta</class>
		<class>entidades.Direccion</class>
		<class>entidades.Estado</class>
		<class>entidades.Menu</class>
		<class>entidades.Odontograma</class>
		<class>entidades.Pais</class>
		<class>entidades.Provincia</class>
		<class>entidades.Rol</class>
		<class>entidades.Telefono</class>
		<class>entidades.Tratamiento</class>
		<class>entidades.Usuario</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.archive.autodetection" value="class"/>
		</properties>
	</persistence-unit>
</persistence>
